<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2F0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RechercheFragment" >
    
    <TextView
        android:id="@+id/textViewTitreRecherche"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/text_rechercher"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1BAFCD"
        android:textSize="17sp" />

    <android.widget.AutoCompleteTextView
        android:id="@+id/editTextRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTitreRecherche"
        android:layout_alignRight="@+id/textViewTitreCritere"
        android:layout_below="@+id/textViewTitreRecherche" >
        <requestFocus />
    </android.widget.AutoCompleteTextView>
    
    <TextView
        android:id="@+id/textViewTitreCritere"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextRecherche"
        android:layout_marginTop="33dp"
        android:text="@string/text_critere"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1BAFCD"
        android:textSize="17sp" />
    
    <Spinner
        android:id="@+id/spinnerCritere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonRecherche"
        android:layout_below="@+id/textViewTitreCritere"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/buttonRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        style="@style/btnStyleBeige"
        android:text="@string/text_rechercher" />

</RelativeLayout>
