<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2F0"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditionOffreFragment" >
    
    <android.support.v7.internal.widget.CompatTextView
        android:id="@+id/textViewElementMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/text_modifier_cv"
        style="@style/compatTitreOrange"/>

    <EditText
        android:id="@+id/editOffre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewElementMenu"
        android:layout_above="@+id/buttonEditionOffre"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>
    
    <Button
         	android:id="@+id/buttonEditionOffre"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_alignParentBottom="true"
         	android:layout_alignParentLeft="true"
         	android:layout_alignParentRight="true"
         	style="@style/btnStyleBeige"
         	android:text="@string/text_envoie" />

</RelativeLayout>
