<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2F0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EvenementEnqueteFragment" >
    
    <android.support.v7.internal.widget.CompatTextView
        android:id="@+id/textViewTitreEvenement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/text_evenement"
        style="@style/compatTitreOrange" />

    <android.support.v7.internal.widget.CompatTextView
        android:id="@+id/textViewTitreEnquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/text_enquete"
        style="@style/compatTitreOrange" />

    <ListView
       	android:id="@+id/listViewOffre"
       	android:layout_width="match_parent"
	    android:layout_height="118dp"
	    android:layout_below="@+id/textViewTitreEvenement" >
    </ListView>

    <ListView
       	android:id="@+id/listViewEnquete"
       	android:layout_width="match_parent"
	    android:layout_height="118dp"
	    android:layout_below="@+id/textViewTitreEnquete" >
    </ListView>

</RelativeLayout>
