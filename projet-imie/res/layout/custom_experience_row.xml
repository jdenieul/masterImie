<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/back"
        style="@style/MyListBackContent"
        android:tag="back" >

        <ImageButton
            android:id="@+id/swipe_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".50"
            android:background="#CE5F5D"
            android:scaleType="fitCenter"
            android:src="@drawable/boutonmodifier" />

        <ImageButton
            android:id="@+id/swipe_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".50"
            android:background="#CE5F5D"
            android:scaleType="fitCenter"
            android:src="@drawable/boutonsupprimer" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/front"
        style="@style/MyListFrontContent"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:orientation="vertical"
        android:tag="front" >

        <TextView
            android:id="@+id/nomExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:text="Concepteur dÃ©veloppeur informatique"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:maxLines="3"
            android:text="Lorem ipsum dolor sit amet, consectetur ... "
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/datedebut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="oct 2013"
                android:textSize="10sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/datefin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="sept 2014"
                android:textSize="10sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>